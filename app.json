      {
        "title": {
          "en": "Set Group Absolute Color Temperature"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "group",
            "placeholder": {
              "en": "Search for groups..."
            }
          },
          {
            "type": "range",
            "name": "ct",
            "placeholder": {
              "en": "absolute color temperature"
            },
            "min": 0,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          },
          {
            "type": "range",
            "name": "transitiontime",
            "placeholder": {
              "en": "transition time"
            },
            "min": 0,
            "max": 100,
            "step": 1,
            "value": 4,
            "label": "ms",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ],
        "id": "set_group_absolute_ct"
