      {
        "title": {
          "en": "!{{Are all lights on|Are all lights off}}"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "group",
            "placeholder": {
              "en": "Search for groups..."
            }
          }
        ],
        "id": "all_lights_on"
      },
