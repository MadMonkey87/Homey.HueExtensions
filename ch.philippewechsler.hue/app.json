{
  "id": "ch.philippewechsler.hue",
  "version": "1.0.0",
  "compatibility": ">=4.0.0",
  "sdk": 2,
  "name": {
    "en": "Philips Hue Extensions"
  },
  "description": {
    "en": "Adds a few extra features missing in the official Hue app."
  },
  "category": [
    "lights"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Philippe Wechsler",
    "email": "myself@philippewechsler.ch"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Set Group Relative Brightness"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "group",
            "placeholder": {
              "en": "Search for groups..."
            }
          },
          {
            "type": "range",
            "name": "relative_increasement",
            "placeholder": {
              "en": "relative brightness increasement"
            },
            "min": -1,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ],
        "id": "set_group_relative_brightness"
      },
      {
        "title": {
          "en": "Set Light Relative Brightness"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "light",
            "placeholder": {
              "en": "Search for lights..."
            }
          },
          {
            "type": "range",
            "name": "relative_increasement",
            "placeholder": {
              "en": "relative brightness increasement"
            },
            "min": -1,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ],
        "id": "set_light_relative_brightness"
      }
    ]
  }
}